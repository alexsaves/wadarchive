{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Linux (DEBUG)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/wadarchive",
            "args": ["../../test/testoutput/output.wad", "../../test/testdata"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "builddebug"
        },
