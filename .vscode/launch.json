            "program": "${workspaceFolder}/build/debug/wadarchive.exe",
            "args": ["..\\..\\test\\testoutput\\output.wad", "..\\..\\test\\testdata"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
